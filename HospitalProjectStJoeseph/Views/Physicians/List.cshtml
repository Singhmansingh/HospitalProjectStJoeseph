@model IEnumerable<HospitalProjectStJoeseph.Models.Physician>

@{
    ViewBag.Title = "List of Physicians";
}

<h2>List of Physicians</h2>

<p>@Html.ActionLink("Create New Physician", "New", null, new { @class = "btn btn-primary" })</p>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Specialty</th>
        <th></th>
    </tr>
    @foreach (var physician in Model)
    {
        <tr>
            <td>@Html.ActionLink($"{physician.first_name} {physician.last_name}", "Show", new { id = physician.physician_id })</td>
            <td>@physician.specialty</td>
            <td>@Html.ActionLink("Edit", "Update", new { id = physician.physician_id }, new { @class = "btn btn-primary" }) | @Html.ActionLink("Delete", "DeleteConfirm", new { id = physician.physician_id }, new { @class = "btn btn-danger" })</td>
        </tr>
    }
</table>