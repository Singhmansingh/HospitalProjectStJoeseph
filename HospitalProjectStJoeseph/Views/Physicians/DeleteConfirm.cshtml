@model HospitalProjectStJoeseph.Models.Physician

<h2>Delete Physician Record</h2>

<p>Are you sure you want to delete this physician record?</p>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.physician_id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.first_name @Model.last_name</td>
    </tr>
    <tr>
        <th>Specialty</th>
        <td>@Model.specialty</td>
    </tr>
</table>

@using (Html.BeginForm("Delete", "Physicians", new { id = Model.physician_id }, FormMethod.Post))
{
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="@Url.Action("Show", "Physicians", new { id = Model.physician_id })" class="btn btn-default">Cancel</a>
}