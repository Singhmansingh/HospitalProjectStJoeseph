@model HospitalProjectStJoeseph.Models.Patient
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

<form action="/Patient/Save/@Model.PatientId" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="PatientName" value="@Model.PatientName" />
    </div>
    <div class="form-group">
        <label>Email Address</label>
        <input type="text" class="form-control" name="PatientEmailAddress" value="@Model.PatientEmailAddress" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" class="form-control" name="PatientPhoneNumber" value="@Model.PatientPhoneNumber" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="PatientPhysicalAddress" value="@Model.PatientPhysicalAddress" />
    </div>
    <div class="form-group">
        <a href="/Patient/Show/@Model.PatientId" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>