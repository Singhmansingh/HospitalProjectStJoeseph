@{
    ViewBag.Title = "New";
}

<h2>New Patient</h2>
<form action="/Patient/Add" method="post">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="PatientName"  />
    </div>
    <div class="form-group">
        <label>Email Address</label>
        <input type="text" class="form-control" name="PatientEmailAddress"  />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input type="text" class="form-control" name="PatientPhoneNumber"  />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="PatientPhysicalAddress"  />
    </div>
    <div class="form-group">
        <a href="/Patient/List" class="btn btn-default">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
