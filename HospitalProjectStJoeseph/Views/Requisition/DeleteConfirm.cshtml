@model HospitalProjectStJoeseph.Models.RequisitionDto

@{
    ViewBag.Title = "DeleteConfirm";
}


<h2>Are you sure you want to delete this Requisition?</h2>




<div class="addInput">
    <label>RequisitionID:</label> <input type="number" name="RequisitionID" />
</div>
<div class="addInput">
    <label>patient_id:</label> <input type="number" name="patient_id" />
</div>
<div class="addInput">
    <label>physician_id:</label> <input type="number" name="physician_id" />
</div>
<div class="addInput">
    <label>clinic_id:</label> <input type="number" name="clinic_id" />
</div>
<div class="addInput">
    <label>test_id:</label> <input type="number" name="test_id" />
</div>
<div class="addInput">
    <label>record_date:</label> <input type="datetime" name="record_date" />
</div>
<div class="addInput">
    <label>test_result:</label> <input type="text" name="test_result" />
</div>




<table id="RequisitionDetailsTable">
    <tr>
        <th id="trID">RequisitionID</th>
        <th id="trPubYear">patient_id</th>
        <th id="trTitle">physician_id</th>
        <th id="trDirector">clinic_id</th>
        <th id="trRatings">test_id</th>
        <th id="trGenre">record_date</th>
        <th id="trGenre">test_result</th>
    </tr>
    <tr>
        <td id="tdID">@Model.RequisitionID</td>
        <td id="tdTitle">@Model.patient_id</td>
        <td id="tdPubYear">@Model.physician_id</td>
        <td id="tdDirector">@Model.clinic_id</td>
        <td id="tdRatings">@Model.test_id</td>
        <td id="tdGenre">@Model.record_date</td>
        <td id="tdGenre">@Model.test_result</td>
    </tr>
</table>

<div id="btnContainer">
    <div>
        <a href="/Requisition/List" id="backbtn">Cancel</a>
    </div>
    <div>
        <form action="/Requisition/Delete/@Model.RequisitionID" method="POST">
            <input type="submit" value="Confirm Delete" id="delBtn" />
        </form>
    </div>
</div>


<style>
    body {
        text-align: center;
    }

    th, td {
        border: 1px solid black;
    }

    #trID, #tdID, #trGenre, #tdGenre {
        width: 100px;
        text-align: center;
    }

    #trTitle, #tdTitle {
        width: 340px;
        text-align: center;
    }

    #trDirector, #tdDirector {
        width: 240px;
        text-align: center;
    }

    #trPubYear, #tdPubYear {
        width: 150px;
        text-align: center;
    }

    #trRatings, #tdRatings {
        width: 80px;
        text-align: center;
    }

    #RequisitionDetailsTable {
        margin-top: 2em;
    }

    #btnContainer {
        display: flex;
        flex-flow: row;
        align-items: baseline;
        justify-content: center;
    }


    #delBtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        padding: 0.5em;
        color: red;
        cursor: pointer;
    }

        #delBtn:hover {
            background-color: palevioletred;
        }

    #backbtn {
        border: 1px solid;
        border-radius: 5px;
        margin-top: 1em;
        margin-right: 4em;
        padding: 0.64em;
        color: blue;
        cursor: pointer;
    }

        #backbtn:hover {
            background-color: deepskyblue;
        }
</style>